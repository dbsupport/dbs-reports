<configuration debug="true">

	<appender name="TEST" class="pl.com.dbs.reports.report.ReportLogTestAppender">
	    <encoder>
	        <pattern>%m%n</pattern>
	    </encoder>
	</appender> 
  
	<root>
	    <level value="DEBUG" />
	    <appender-ref ref="STDOUT" />
	    <appender-ref ref="TEST" />
	</root>
	
</configuration>