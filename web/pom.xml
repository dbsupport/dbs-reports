    <profiles>
        <profile>
            <id>jrebel</id>
			<build>
				<finalName>${project.artifactId}-${envir}-${project.version}</finalName>
				<filters>
					<filter>../src/main/filters/${envir}.properties</filter>
				</filters>
				<resources>
					<resource>
						<directory>src/main/resources</directory>
						<filtering>false</filtering>
					</resource>
					<resource>
						<directory>src/main/resources-filter</directory>
						<filtering>true</filtering>
					</resource>
				</resources>
				<plugins>
					<plugin>
						<groupId>org.zeroturnaround</groupId>
						<artifactId>jrebel-maven-plugin</artifactId>
						<executions>
							<execution>
								<id>generate-rebel-xml</id>
								<phase>process-resources</phase>
								<goals>
									<goal>generate</goal>
								</goals>
							</execution>
						</executions>
						<configuration>
							<argLine>-Xmx1024m</argLine>
							<packaging>war</packaging>
							<addResourcesDirToRebelXml>true</addResourcesDirToRebelXml>
						    <web>
						      <resources>
						        <resource>
						          <target>reports/</target>
						          <directory>${basedir}/src/main/webapp</directory>
						        </resource>        
						      </resources>
						    </web>
						</configuration>
					</plugin>
				</plugins>
				<pluginManagement>
					<plugins>
						<plugin>
							<artifactId>maven-war-plugin</artifactId>
							<configuration>
								<webResources>
									<resource>
										<directory>${basedir}/src/main/webapp-filter</directory>
										<!-- UWAGA: aktualnie nie filtruje zapisu ${..}: MWAR-43 -->
										<filtering>true</filtering>
									</resource>
								</webResources>
								<warSourceExcludes>html/**</warSourceExcludes>
							</configuration>
						</plugin>
					</plugins>
				</pluginManagement>
			</build>
		</profile>
		        
