<?xml version="1.0"?>
<!DOCTYPE Configure PUBLIC "-//Mort Bay Consulting//DTD Configure//EN" "http://jetty.mortbay.org/configure.dtd">

<Configure id="wac" class="org.eclipse.jetty.servlet.ServletContextHandler">

   <New id="tx" class="org.eclipse.jetty.plus.jndi.Transaction">
    <Arg>
        <New class="com.atomikos.icatch.jta.UserTransactionManager"/>
    </Arg>
   </New>

   <New class="org.eclipse.jetty.plus.jndi.Resource">
    <Arg></Arg>
    <Arg>reports/jdbc/DataSource</Arg>
    <Arg>
    	<New id="EbaDataSource" class="com.mchange.v2.c3p0.ComboPooledDataSource">
        	<Set name="driverClass">oracle.jdbc.OracleDriver</Set>

        	<Set name="jdbcUrl">jdbc:oracle:thin:@1.1.1.1:1521:test</Set>
        	<Set name="user">dbs</Set>
        	<Set name="password">dbs</Set>
        	<Set name="minPoolSize">0</Set>
        	<Set name="initialPoolSize">0</Set>
        	<Set name="maxPoolSize">5</Set>
        	<Set name="acquireIncrement">1</Set>
        	<Set name="maxIdleTimeExcessConnections">180</Set>
        	<Set name="preferredTestQuery">SELECT 1 FROM DUAL</Set>
        	<Set name="idleConnectionTestPeriod">180</Set>
        	<Set name="testConnectionOnCheckin">true</Set>
    	</New>
    </Arg>
   </New>


</Configure>